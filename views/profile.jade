extends layout

block header
  .container.push--top.profil-page
    .row
      .col-lg-2
        img.img-circle(src='http://www.gravatar.com/avatar/' + hash, width='140', alt='')
      .col-lg-10
        table.table.table-hover
          tr
            th Currency
            th Address
            th &nbsp;
          - for (var i = 0; i < addresses.length; ++i) {
            - var address = addresses[i].address
            tr
              td Placeholder
              td= address
              td
                button.btn.btn-info(class="copy-button pull-right", data-clipboard-text=address, title="Click to clipboard")
                    span.legend Copy to Clipboard
                    span.glyphicon.glyphicon-check.hidden
          - }

