extends layout

block header
  .container.push--top.profil-page
    - if (display_error)
      .alert.alert-danger
        p There is no profile corresponding to the hash <strong>#{hash}</strong>.

    .row
      .col-md-8.col-md-offset-2.text-center
        h3 Search profile

        .mt
          p Too lazy to generate to <em>hash</em> an email by yourself?
          p You can use this form to go directly to a profile page. <br />Type the email of the profile you want to visit and press the button !
        form.form-inline.mt(action='/search', method='get')
          .form-group
            input.input-lg.form-control(type="text", placeholder="someone@example.com", name="email", value=email)
          button.btn.btn-lg.btn-success.margin-left-xs(type="submit") Search !

